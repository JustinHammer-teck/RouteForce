<div class="flex justify-between items-center mt-6">
    <div class="text-sm opacity-70">
        Showing @TotalCount @ItemName
    </div>
    <div class="join">
        <a hx-get="@GetPageUrl(CurrentPage - 1)"
           hx-swap="outerHTML"
           hx-target="#order-list-container"
           class="join-item btn btn-sm @(CurrentPage <= 1 ? "btn-disabled" : "")">
            Previous
        </a>

        <button class="join-item btn btn-sm btn-active">
            Page @CurrentPage of @TotalPages
        </button>

        <a hx-get="@GetPageUrl(CurrentPage + 1)"
           hx-swap="outerHTML"
           hx-target="#order-list-container"
           class="join-item btn btn-sm @(CurrentPage >= TotalPages ? "btn-disabled" : "")">
            Next
        </a>
    </div>
</div>

@code {
    [Parameter] public int CurrentPage { get; set; } = 1;
    [Parameter] public int TotalPages { get; set; } = 1;
    [Parameter] public int TotalCount { get; set; } = 0;
    [Parameter] public int PageSize { get; set; } = 10;
    [Parameter] public string ItemName { get; set; } = "items";

    private string GetPageUrl(int page)
    {
        if (page < 1) page = 1;
        if (page > TotalPages) page = TotalPages;
        return $"/orders?pageNumber={page}&pageSize={PageSize}";
    }
}
