@page "/admin/dashboard"
@using RouteForce.Web.Pages.Shared
@layout _Layout

<main class="h-full">
  <div class="drawer drawer-open">
    <input id="my-drawer-4" type="checkbox" class="drawer-toggle"/>
    <div class="drawer-content">
      <_NavBar></_NavBar>
      <div id="admin-content"
           class="p-5">
        <div hx-get="/admin/stats"
             hx-swap="innerHTML"
             hx-trigger="load"
             hx-target="this"
             class="mb-6"></div>

        <div hx-get="/orders?pageNumber=1&pageSize=5"
             hx-swap="innerHTML"
             hx-trigger="load"
             hx-target="this"
             ></div>
      </div>
      <_Footer/>
    </div>
    <div class="drawer-side is-drawer-close:overflow-visible">
      <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
      <div class="is-drawer-close:w-14 is-drawer-open:w-64 bg-base-200 flex flex-col items-start min-h-full">
        <ul class="menu w-full grow">
          <li>
            <a href="/"
               hx-boost="true"
              class="is-drawer-close:tooltip is-drawer-close:tooltip-right" data-tip="Homepage">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linejoin="round" stroke-linecap="round"
                   stroke-width="2" fill="none" stroke="currentColor" class="inline-block size-4 my-1.5">
                <path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8"></path>
                <path
                  d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              </svg>
              <span class="is-drawer-close:hidden">Homepage</span>
            </a>
          </li>
          <li>
            <button type="button" 
                    hx-get="/users/register"
                    hx-swap="innerHTML"
                    hx-target="#admin-content"
                    class="is-drawer-close:tooltip is-drawer-close:tooltip-right"
                    data-tip="Create User">
              <svg class="w-5 h-5 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12h4m-2 2v-4M4 18v-1a3 3 0 0 1 3-3h4a3 3 0 0 1 3 3v1a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1Zm8-10a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
              </svg>
              <span class="is-drawer-close:hidden">Create User</span>
            </button>
          </li>
          <li>
            <a href="/users/logout"
               hx-boost="true"
               class="is-drawer-close:tooltip is-drawer-close:tooltip-right"
               data-tip="Sign Out">
              <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H4m12 0-4 4m4-4-4-4m3-4h2a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3h-2"/>
              </svg>
              <span class="is-drawer-close:hidden">Sign Out</span>
            </a>
          </li>
        </ul>
        <div class="m-2 is-drawer-close:tooltip is-drawer-close:tooltip-right" data-tip="Open">
          <label for="my-drawer-4" class="btn btn-ghost btn-circle drawer-button is-drawer-open:rotate-y-180">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linejoin="round" stroke-linecap="round"
                 stroke-width="2" fill="none" stroke="currentColor" class="inline-block size-4 my-1.5">
              <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
              <path d="M9 4v16"></path>
              <path d="M14 10l2 2l-2 2"></path>
            </svg>
          </label>
        </div>
      </div>
    </div>
  </div>
</main>

