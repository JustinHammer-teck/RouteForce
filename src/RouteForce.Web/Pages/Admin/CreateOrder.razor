@page "/CreateOrder"
@using RouteForce.Web.Sessions

<section class="w-full h-full flex flex-row justify-center py-8">
    <div class="card w-full max-w-2xl shadow-lg bg-base-100">
        <div class="card-body">
            <h2 class="text-2xl font-bold text-center mb-6">Create Order</h2>

            <ul class="steps w-full mb-8">
                <li class="step step-primary" id="step-indicator-1">Receiver Detail</li>
                <li class="step" id="step-indicator-2">Order Detail</li>
            </ul>

            <div id="form-container">
                @if (FormStep == 1)
                {   
                    <div hx-get="/receivers/register"
                         hx-swap="innerHTML"
                         hx-trigger="load">
                    </div>
                }
                else
                {
                    <div hx-get="/orders/register"
                         hx-swap="innerHTML"
                         hx-trigger="load">
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public SessionManager Session { get; set; }
    [Parameter] public int FormStep { get; set; }
}
