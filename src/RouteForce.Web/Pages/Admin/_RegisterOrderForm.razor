@using RouteForce.Application.Common.DTOs
@using RouteForce.Application.Common.Interfaces
@using Microsoft.EntityFrameworkCore
@using RouteForce.Web.Sessions
@inject IApplicationDbContext DbContext
@inject IHttpContextAccessor HttpContextAccessor
@inject SessionManager SessionManager

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="toast toast-top toast-end">
        <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@ErrorMessage</span>
        </div>
    </div>
}

<form hx-post="/orders/register"
      hx-target="#order-form-container"
      hx-swap="innerHTML"
      class="space-y-4">

    <h3 class="text-xl font-semibold mb-4">Create New Order</h3>

    <div>
        <label class="label">
            <span class="label-text">Receiver</span>
        </label>
        <select name="PersonalReceiverId"
                required
                class="select select-bordered w-full">
            <option value="">Select a receiver...</option>
            @if (Receivers != null)
            {
                @foreach (var receiver in Receivers)
                {
                    <option value="@receiver.Id">@receiver.Name - @receiver.Email</option>
                }
            }
        </select>
    </div>

    <div>
        <label class="label">
            <span class="label-text">Product Reference ID</span>
        </label>
        <input type="text"
               name="ProductReferenceId"
               required
               placeholder="SKU-12345"
               class="input input-bordered w-full" />
    </div>

    <div>
        <label class="label">
            <span class="label-text">Delivery Address</span>
        </label>
        <select name="SelectedDeliveryAddressId"
                class="select select-bordered w-full">
            <option value="">Select delivery address...</option>
            @if (DeliveryAddresses != null)
            {
                @foreach (var address in DeliveryAddresses)
                {
                    <option value="@address.Id">
                        @address.Label - @address.Address.AddressLine, @address.Address.City
                    </option>
                }
            }
        </select>
        <label class="label">
            <span class="label-text-alt">Select receiver first to see their saved addresses</span>
        </label>
    </div>

    <div class="divider">Intermediate Checkpoint (Optional)</div>

    <div>
        <label class="label">
            <span class="label-text">Checkpoint Name</span>
        </label>
        <input type="text"
               name="IntermediateCheckpointName"
               placeholder="e.g., Transit Hub - Downtown"
               class="input input-bordered w-full" />
        <label class="label">
            <span class="label-text-alt">Enter a name to add an intermediate stop between warehouse and delivery</span>
        </label>
    </div>

    <_AddressSuggestion
        AddressLine=""
        City=""
        State=""
        PostalCode=""
        Country=""
        Latitude="null"
        Longitude="null" />

    <div>
        <label class="label">
            <span class="label-text">Estimated Delivery Date (Optional)</span>
        </label>
        <input type="date"
               name="EstimatedDeliveryDate"
               class="input input-bordered w-full" />
    </div>

    <div>
        <label class="label">
            <span class="label-text">Notes (Optional)</span>
        </label>
        <textarea name="Notes"
                  placeholder="Special delivery instructions or order notes"
                  class="textarea textarea-bordered w-full"
                  rows="3"></textarea>
    </div>

    <div class="flex justify-end gap-2">
        <button type="submit" class="btn btn-primary">
            Create Order
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
        </button>
    </div>

    <AntiforgeryToken/>
</form>

@code {
    private List<Core.Models.PersonalReceiver>? Receivers { get; set; }
    private List<Core.Models.DeliveryAddress>? DeliveryAddresses { get; set; }
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var httpContext = HttpContextAccessor.HttpContext;
        if (httpContext == null)
        {
            return;
        }

        ErrorMessage = SessionManager.GetSessionValue("OrderError");
        SuccessMessage = SessionManager.GetSessionValue("OrderSuccess");

        var businessIdClaim = httpContext.User.FindFirst("BusinessId");
        if (businessIdClaim == null || !int.TryParse(businessIdClaim.Value, out var businessId))
        {
            return;
        }

        Receivers = await DbContext.PersonalReceivers
            .AsNoTracking()
            .Where(r => r.CreatedByBusinessId == businessId)
            .ToListAsync()
            .ConfigureAwait(false);

        var receiverIds = Receivers.Select(r => r.Id).ToList();
        DeliveryAddresses = await DbContext.DeliveryAddresses
            .AsNoTracking()
            .Where(a => receiverIds.Contains(a.PersonalReceiverId))
            .ToListAsync()
            .ConfigureAwait(false);
    }
}